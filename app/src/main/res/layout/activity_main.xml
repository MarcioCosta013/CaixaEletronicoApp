<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vermelho"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/text_Saldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/branca"
        android:padding="30dp"
        android:text="Saldo em Conta:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />

    <EditText
        android:id="@+id/edit_Dinheiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/branca"
        android:ems="10"
        android:inputType="numberDecimal"
        android:padding="30dp"
        android:text="00.00"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Saldo"
        app:layout_constraintVertical_bias="0.18" />

    <Button
        android:id="@+id/btn_Sacar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botao"
        android:text="Sacar"
        android:textColor="@color/vermelho"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_Dinheiro"
        app:layout_constraintVertical_bias="0.39" />
</androidx.constraintlayout.widget.ConstraintLayout>